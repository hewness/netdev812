<Window x:Class="Addresses.EmailAddressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Address" Height="177" Width="431">
    <Grid Height="194" VerticalAlignment="Top">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF012DF3" Offset="0.318"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label Content="Email Address:" HorizontalAlignment="Left" Margin="42,33,0,0" VerticalAlignment="Top" Foreground="#FFFBFBFB"/>
        <TextBox x:Name="tbEmailAddress" HorizontalAlignment="Left" Height="23" Margin="125,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" Margin="125,89,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="231,89,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
