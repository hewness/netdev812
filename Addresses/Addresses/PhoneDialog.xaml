<Window x:Class="Addresses.PhoneDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phone Number Entry" Height="172" Width="300">
    <Grid HorizontalAlignment="Left" Width="292">
        <Label Content="Phone Number:" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="65,53,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="phoneNumberTextBox" HorizontalAlignment="Left" Height="23" Margin="108,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="46,97,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="153,97,0,0" VerticalAlignment="Top" Width="75" Click="cancelBtn_Click"/>
        <ComboBox x:Name="phoneTypeComboBox" HorizontalAlignment="Left" Margin="108,57,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
